<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nsu.fit.g14201.marchenko.phoenix">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/phoenix"
        android:label="@string/app_name"
        android:roundIcon="@drawable/phoenix"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="nsu.fit.g14201.marchenko.phoenix.googledrive.GoogleDriveActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nsu.fit.g14201.marchenko.phoenix.ui.activity.MainActivity" />
        <activity android:name="nsu.fit.g14201.marchenko.phoenix.registration.RegistrationActivity" />
    </application>

</manifest>