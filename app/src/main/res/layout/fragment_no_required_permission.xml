<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPermission"
    android:padding="@dimen/camera_permission_padding">

    <TextView
        android:id="@+id/grant_access"
        style="@style/CameraPermissionActivityTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grant_camera_access_top_margin"
        android:textSize="@dimen/grant_camera_access_font"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/need_for_permission_explanation"
        style="@style/CameraPermissionActivityTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_access"
        android:layout_marginTop="@dimen/need_for_camera_explanation_top_margin"
        android:textSize="@dimen/need_for_camera_explanation_font" />

    <Button
        android:id="@+id/system_settings"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/comfortaa"
        android:text="@string/settings"
        android:textColor="@android:color/white"
        android:textSize="@dimen/camera_access_settings_button_font"
        android:textStyle="bold" />
</RelativeLayout>